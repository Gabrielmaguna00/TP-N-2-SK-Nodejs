html(lang='es')
head
	meta(charset='UTF-8')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
	title Cargos de empleados - La Tablita

body.container.bg-light
	header
		ul.nav.nav-tabs.d-flex.justify-content-center
			li.nav-item
				a.nav-link(href='/') Home
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/productos') Productos
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/negocios') Negocios
			|       
			li.nav-item
				a.nav-link(aria-current='page', href='/empleados') Empleados
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/pedidos') Pedidos
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/stock') Stock 
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/cargos') Cargos

	h1.text-center.my-4.text-primary Bienvenido a La Tablita
	h2.text-primary.mt-4 Mostrando Cargos

	if rows.length == 0
			h1.alert-danger.rounded.p-2 No hay cargos en la base de datos
	else if rows.name && rows.city 
		table.table
			thead
				th(scope="col") Cargo 
			each row in rows
				tbody
					th(scope="row")= row.name
					td= row.name
	else 
		table.table
			thead
				th(scope="col") Nombre del empleado
				th(scope="col") Cargo
				th(scope="col") ID de la posici√≥n
			each row in rows
				tbody
					th(scope="row")= row.staff_name
					td= row.position_name
					td= row.position_id

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')

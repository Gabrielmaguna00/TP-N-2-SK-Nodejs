html(lang='es')
head
	meta(charset='UTF-8')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
	title Productos - La Tablita

body.container.bg-light
	header
		ul.nav.nav-tabs.d-flex.justify-content-center
			li.nav-item
				a.nav-link(href='/') Home
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/productos') Productos
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/negocios') Negocios
			|       
			li.nav-item
				a.nav-link(aria-current='page', href='/empleados') Empleados
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/pedidos') Pedidos
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/stock') Stock 
			|
			li.nav-item
				a.nav-link(aria-current='page', href='/cargos') Cargos
				
	h2.text-primary.mt-4 Mostrando datos de productos 
	if rows.length == 0
		h1.alert-danger.rounded.p-2 No hay productos en la base de datos
	else
		table.table
			thead
				th(scope="col") Nombre
				th(scope="col") Precio
				th(scope="col") Categoria
			each row in rows
				tbody
					th(scope="row")= row.name
					td= row.price
					td= row.category_id

	a.btn.btn-primary(type="button", data-bs-toggle='modal', data-bs-target='#addProductmodal') Agregar Producto

	#addProductmodal.modal.fade
		.modal-dialog
			.modal-content
				.modal-header
					button.btn-close(type='button', data-bs-dismiss='modal')
				.modal-body
					form(action="/productos/create", method="post")
						.mb-3
							label.form-label(for='name') Nombre 
							input.form-control(type="text", name="name")
						.mb-3
							label.form-label(for='price') Precio
							input.form-control(type="number", name="price")
						.mb-3
							label.form-label(for='category_id') Categoria
							input.form-control(type="number", name="category_id")
						button.btn.btn-danger.mx-2(type="button", data-bs-dismiss='modal') Cancelar
						button.btn.btn-dark.mx-2(type='submit') Agregar producto

	script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')